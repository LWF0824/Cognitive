<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_test"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/h_back"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/klee_ava"/>
    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="klee"
        android:textSize="24dp"
        android:gravity="center"/>
    <com.lucasurbas.listitemview.ListItemView
        android:layout_marginLeft="20dp"
        android:id="@+id/family"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liv_displayMode="icon"
        app:liv_icon="@drawable/rec"
        app:liv_multiline="false"
        app:liv_subtitle="联系"
        app:liv_title="子女亲人" />
    <com.lucasurbas.listitemview.ListItemView
        android:layout_marginLeft="20dp"
        android:id="@+id/personal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liv_title="个人资料设置"
        app:liv_subtitle="联系"
        app:liv_icon="@drawable/rec"
        app:liv_multiline="false"
        app:liv_displayMode="icon"/>
    <com.lucasurbas.listitemview.ListItemView
        android:layout_marginLeft="20dp"
        android:id="@+id/history_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liv_title="历史测评报告"
        app:liv_subtitle="联系"
        app:liv_icon="@drawable/rec"
        app:liv_multiline="false"
        app:liv_displayMode="icon"/>
    <com.lucasurbas.listitemview.ListItemView
        android:layout_marginLeft="20dp"
        android:id="@+id/longtime_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liv_title="周月年报"
        app:liv_subtitle="联系"
        app:liv_icon="@drawable/rec"
        app:liv_multiline="false"
        app:liv_displayMode="icon"/>
    <com.lucasurbas.listitemview.ListItemView
        android:layout_marginLeft="20dp"
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liv_title="切换账号"
        app:liv_subtitle="联系"
        app:liv_icon="@drawable/rec"
        app:liv_multiline="false"
        app:liv_displayMode="icon"/>
