<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_test"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="个人设置"
            android:textSize="30sp"
            android:textStyle="bold" />
    </android.widget.Toolbar>
    <com.lucasurbas.listitemview.ListItemView
        android:layout_marginLeft="20dp"
        android:id="@+id/family"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liv_multiline="false"
        app:liv_menu="@menu/single_action_menu"
        app:liv_title="头像" />

    <com.lucasurbas.listitemview.ListItemView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:liv_menu="@menu/muti_action_menu"
        app:liv_multiline="false"
        app:liv_subtitle="gaoshan"
        app:liv_title="昵称" />
    <com.lucasurbas.listitemview.ListItemView
        android:id="@+id/user_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:liv_menu="@menu/muti_action_menu"
        app:liv_subtitle="女"
        app:liv_multiline="false"
        app:liv_title="性别" />
    <com.lucasurbas.listitemview.ListItemView
        android:id="@+id/user_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:liv_menu="@menu/muti_action_menu"
        app:liv_subtitle="111111"
        app:liv_multiline="false"
        app:liv_title="手机号" />
    <com.lucasurbas.listitemview.ListItemView
        android:id="@+id/user_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:liv_menu="@menu/muti_action_menu"
        app:liv_multiline="false"
        app:liv_subtitle="2000年1月1日"
        app:liv_title="生日" />
</LinearLayout>