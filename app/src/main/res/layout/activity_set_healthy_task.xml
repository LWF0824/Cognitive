<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打卡设置"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:background="@color/page_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10px"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:layout_marginTop="30px"
                android:layout_marginLeft="60px"
                android:layout_marginRight="20px"
                android:text="根据您的认知测试结果生成了以下打卡项目，您也可以根据您的喜好进行修改。"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="必选项目"
                android:textColor="#000000"
                android:textSize="75px"
                android:layout_marginTop="30px"
                android:layout_marginLeft="60px"/>

            <androidx.cardview.widget.CardView
                android:layout_width="950px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50px"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="30px"
                    android:layout_marginBottom="20px"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="80px"
                            android:layout_height="90px"
                            android:src="@drawable/sleep" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35px"
                            android:text="睡眠"
                            android:textColor="#000000"
                            android:textSize="70px" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50px"
                        android:text="早睡早起"
                        android:textColor="#000000"
                        android:textSize="60px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginTop="10px"
                        android:text="早睡早起，保持充足的睡眠，规律生活每一天！" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50px"
                        android:text="目标设置"
                        android:textColor="#000000"
                        android:textSize="60px" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginTop="10px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15px"
                            android:text="起床时间："
                            android:textColor="#000000"
                            android:textSize="56px" />

                        <TextView
                            android:id="@+id/txt_getUpTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15px"
                            android:textSize="56px" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right">

                            <Button
                                android:id="@+id/btn_getUpTime"
                                android:layout_width="wrap_content"
                                android:layout_height="120px"
                                android:gravity="right"
                                android:text="选择起床时间"
                                android:textSize="45px" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15px"
                            android:text="睡觉时间："
                            android:textColor="#000000"
                            android:textSize="56px" />

                        <TextView
                            android:id="@+id/txt_sleepTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15px"
                            android:textSize="56px" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right">

                            <Button
                                android:id="@+id/btn_sleepTime"
                                android:layout_width="wrap_content"
                                android:layout_height="120px"
                                android:gravity="right"
                                android:text="选择睡觉时间"
                                android:textSize="45px" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="950px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50px"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="30px"
                    android:layout_marginBottom="20px"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="80px"
                            android:layout_height="90px"
                            android:src="@drawable/exercise" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35px"
                            android:text="运动"
                            android:textColor="#000000"
                            android:textSize="70px" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50px"
                        android:text="每日步行"
                        android:textColor="#000000"
                        android:textSize="60px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginTop="10px"
                        android:text="经常步行的人，心肺功能更棒哦！" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50px"
                        android:text="目标设置"
                        android:textColor="#000000"
                        android:textSize="60px" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginTop="10px"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txt_setStep"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="每日行走7000步"
                                    android:textColor="#000000"
                                    android:textSize="56px" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right">

                                    <Button
                                        android:id="@+id/btn_everydayStep"
                                        android:layout_width="wrap_content"
                                        android:layout_height="120px"
                                        android:gravity="right"
                                        android:text="选择目标步数"
                                        android:textSize="45px"/>
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="80px"
                        android:text="每周运动"
                        android:textColor="#000000"
                        android:textSize="60px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginTop="10px"
                        android:text="运动可以提高健康水平，使人充满活力，提高幸福指数。" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50px"
                        android:text="目标设置"
                        android:textColor="#000000"
                        android:textSize="60px" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginTop="10px"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txt_setSportTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="每周运动4次"
                                    android:textColor="#000000"
                                    android:textSize="56px" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right">

                                    <Button
                                        android:id="@+id/btn_everyWeekSport"
                                        android:layout_width="wrap_content"
                                        android:layout_height="120px"
                                        android:gravity="right"
                                        android:text="选择运动次数"
                                        android:textSize="45px"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txt_setPowerTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="其中力量训练2次"
                                    android:textColor="#000000"
                                    android:textSize="56px" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right">
                                    <Button
                                        android:id="@+id/btn_everyWeekPower"
                                        android:layout_width="wrap_content"
                                        android:layout_height="120px"
                                        android:text="选择力量训练次数"
                                        android:textSize="45px"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可选项目"
                    android:textColor="#000000"
                    android:textSize="75px"
                    android:layout_marginTop="30px"
                    android:layout_marginLeft="60px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可根据需要增加打卡任务，选择属于你的健康生活"
                    android:textSize="40px"
                    android:layout_marginTop="10px"
                    android:layout_marginLeft="60px"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="950px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50px"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="30px"
                    android:layout_marginBottom="20px"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="80px"
                            android:layout_height="75px"
                            android:src="@drawable/water" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35px"
                            android:text="饮水"
                            android:textColor="#000000"
                            android:textSize="70px" />
                        <CheckBox
                            android:id="@+id/cb_drinkWater"
                            android:checked="true"
                            android:layout_width="80px"
                            android:layout_height="80px"
                            android:layout_marginLeft="450px"
                            android:layout_gravity="right"/>

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50px"
                        android:text="每日喝水"
                        android:textColor="#000000"
                        android:textSize="60px"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginTop="10px"
                        android:text="再忙也要保持身心平衡哦！" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50px"
                        android:text="目标设置"
                        android:textColor="#000000"
                        android:textSize="60px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginTop="10px"
                        android:layout_marginBottom="10px"
                        android:text="每天喝水1.5L"
                        android:textColor="#000000"
                        android:textSize="56px" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="950px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50px"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="30px"
                    android:layout_marginBottom="20px"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="80px"
                            android:layout_height="85px"
                            android:src="@drawable/book" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35px"
                            android:text="阅读"
                            android:textColor="#000000"
                            android:textSize="70px" />
                        <CheckBox
                            android:id="@+id/cb_read"
                            android:checked="true"
                            android:layout_width="80px"
                            android:layout_height="80px"
                            android:layout_marginLeft="450px"
                            android:layout_gravity="right"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="每日读书"
                        android:layout_marginTop="50px"
                        android:textColor="#000000"
                        android:textSize="60px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginTop="10px"
                        android:text="阅读与思考可以刺激大脑保持活力，使头脑更灵敏哦。" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50px"
                        android:text="目标设置"
                        android:textColor="#000000"
                        android:textSize="60px" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="每日阅读30分钟"
                            android:textColor="#000000"
                            android:textSize="56px" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="950px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50px"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="30px"
                    android:layout_marginBottom="20px"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="80px"
                            android:layout_height="75px"
                            android:src="@drawable/hobby" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35px"
                            android:text="兴趣与社交"
                            android:textColor="#000000"
                            android:textSize="70px" />
                        <CheckBox
                            android:id="@+id/cb_hobby"
                            android:checked="true"
                            android:layout_width="80px"
                            android:layout_height="80px"
                            android:layout_marginLeft="250px"
                            android:layout_gravity="right"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="兴趣爱好与社会活动"
                        android:layout_marginTop="50px"
                        android:textColor="#000000"
                        android:textSize="60px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginTop="10px"
                        android:text="拥有丰富多彩的兴趣爱好和社会活动，更能提高对生活的热爱哦。" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50px"
                        android:text="目标设置"
                        android:textColor="#000000"
                        android:textSize="60px" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="每日活动45分钟"
                            android:textColor="#000000"
                            android:textSize="56px" />

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="聊天，打牌，跳舞，唱歌等，任何你喜欢的事都可以哦。"
                        android:textSize="40px" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="950px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50px"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="30px"
                    android:layout_marginBottom="20px"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="80px"
                            android:layout_height="75px"
                            android:src="@drawable/smile" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35px"
                            android:text="情绪"
                            android:textColor="#000000"
                            android:textSize="70px" />
                        <CheckBox
                            android:id="@+id/cb_smile"
                            android:checked="true"
                            android:layout_width="80px"
                            android:layout_height="80px"
                            android:layout_marginLeft="450px"
                            android:layout_gravity="right"/>

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50px"
                        android:text="每日微笑"
                        android:textColor="#000000"
                        android:textSize="60px"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginTop="10px"
                        android:text="笑一笑，十年少！" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50px"
                        android:text="目标设置"
                        android:textColor="#000000"
                        android:textSize="60px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginTop="10px"
                        android:layout_marginBottom="10px"
                        android:text="每天微笑一次"
                        android:textColor="#000000"
                        android:textSize="56px" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="950px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50px"
                android:layout_marginBottom="50px"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="30px"
                    android:layout_marginBottom="20px"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="80px"
                            android:layout_height="75px"
                            android:src="@drawable/diary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35px"
                            android:text="日记"
                            android:textColor="#000000"
                            android:textSize="70px" />
                        <CheckBox
                            android:id="@+id/cb_diary"
                            android:layout_width="80px"
                            android:layout_height="80px"
                            android:layout_marginLeft="450px"
                            android:layout_gravity="right"/>

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50px"
                        android:text="记日记"
                        android:textColor="#000000"
                        android:textSize="60px"/>
                    <TextView
