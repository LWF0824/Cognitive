<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="-108dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10px"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="推荐健康打卡设置"
                android:textColor="#000000"
                android:textSize="90px" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:layout_marginTop="30px"
                android:layout_marginLeft="60px"
                android:layout_marginRight="20px"
                android:text="根据您的认知测试结果生成了以下打卡项目，您也可以根据您的喜好在每日打卡页面进行修改。"/>

            <androidx.cardview.widget.CardView
                android:layout_width="950px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50px"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="30px"
                    android:layout_marginBottom="20px"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="80px"
                            android:layout_height="90px"
                            android:src="@drawable/sleep" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35px"
                            android:text="睡眠"
                            android:textColor="#000000"
                            android:textSize="70px" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginTop="10px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15px"
                            android:text="起床时间："
                            android:textColor="#000000"
                            android:textSize="56px" />

                        <TextView
                            android:id="@+id/txt_getUpTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15px"
                            android:textSize="56px" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15px"
                            android:text="睡觉时间："
                            android:textColor="#000000"
                            android:textSize="56px" />

                        <TextView
                            android:id="@+id/txt_sleepTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15px"
                            android:textSize="56px" />
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="950px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50px"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="30px"
                    android:layout_marginBottom="20px"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="80px"
                            android:layout_height="90px"
                            android:src="@drawable/exercise" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35px"
                            android:text="运动"
                            android:textColor="#000000"
                            android:textSize="70px" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginTop="10px"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txt_setStep"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="每日行走7000步"
                                    android:textColor="#000000"
                                    android:textSize="56px" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginTop="10px"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txt_setSportTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="每周运动4次"
                                    android:textColor="#000000"
                                    android:textSize="56px" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txt_setPowerTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="其中力量训练2次"
                                    android:textColor="#000000"
                                    android:textSize="56px" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="950px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50px"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="30px"
                    android:layout_marginBottom="20px"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="80px"
                            android:layout_height="75px"
                            android:src="@drawable/water" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35px"
                            android:text="饮水"
                            android:textColor="#000000"
                            android:textSize="70px" />
                        <CheckBox
                            android:id="@+id/cb_drinkWater"
                            android:checked="true"
                            android:layout_width="80px"
                            android:layout_height="80px"
                            android:layout_marginLeft="450px"
                            android:layout_gravity="right"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginTop="10px"
                        android:layout_marginBottom="10px"
                        android:text="每天喝水1.5L"
                        android:textColor="#000000"
                        android:textSize="56px" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="950px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50px"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="30px"
                    android:layout_marginBottom="20px"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="80px"
                            android:layout_height="85px"
                            android:src="@drawable/book" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35px"
                            android:text="阅读"
                            android:textColor="#000000"
                            android:textSize="70px" />
                        <CheckBox
                            android:id="@+id/cb_read"
                            android:checked="true"
                            android:layout_width="80px"
                            android:layout_height="80px"
                            android:layout_marginLeft="450px"
                            android:layout_gravity="right"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="每日阅读30分钟"
                            android:textColor="#000000"
                            android:textSize="56px" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="950px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50px"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="30px"
                    android:layout_marginBottom="20px"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="80px"
                            android:layout_height="75px"
                            android:src="@drawable/hobby" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35px"
                            android:text="兴趣与社交"
                            android:textColor="#000000"
                            android:textSize="70px" />
                        <CheckBox
                            android:id="@+id/cb_hobby"
                            android:checked="true"
                            android:layout_width="80px"
                            android:layout_height="80px"
                            android:layout_marginLeft="250px"
                            android:layout_gravity="right"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="每日活动45分钟"
                            android:textColor="#000000"
                            android:textSize="56px" />

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="聊天，打牌，跳舞，唱歌等，任何你喜欢的事都可以哦。"
                        android:textSize="40px" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="950px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50px"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="30px"
                    android:layout_marginBottom="20px"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="80px"
                            android:layout_height="75px"
                            android:src="@drawable/smile" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35px"
                            android:text="情绪"
                            android:textColor="#000000"
                            android:textSize="70px" />
                        <CheckBox
                            android:id="@+id/cb_smile"
                            android:checked="true"
                            android:layout_width="80px"
                            android:layout_height="80px"
                            android:layout_marginLeft="450px"
                            android:layout_gravity="right"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginTop="10px"
                        android:layout_marginBottom="10px"
                        android:text="每天微笑一次"
                        android:textColor="#000000"
                        android:textSize="56px" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="950px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50px"
                android:layout_marginBottom="50px"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="30px"
                    android:layout_marginBottom="20px"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="80px"
                            android:layout_height="75px"
                            android:src="@drawable/diary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35px"
                            android:text="日记"
                            android:textColor="#000000"
                            android:textSize="70px" />
                        <CheckBox
                            android:id="@+id/cb_diary"
                            android:layout_width="80px"
                            android:layout_height="80px"
                            android:layout_marginLeft="450px"
                            android:layout_gravity="right"/>

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginTop="10px"
                        android:layout_marginBottom="10px"
                        android:text="每天一篇日记"
                        android:textColor="#000000"
                        android:textSize="56px" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_confirm_task"
                android:layout_width="600px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40px"
                android:paddingLeft="60dp"
                android:paddingTop="10dp"
                android:paddingRight="60dp"
                android:paddingBottom="10dp"
                fancy:fb_defaultColor="#2672C3"
                fancy:fb_focusColor="#2C67AF"
                fancy:fb_radius="30dp"
                fancy:fb_text="确认设置"
                fancy:fb_textColor="#fff"
                fancy:fb_textSize = "55px"/>
            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_cancel_task"
                android:layout_width="600px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40px"
                android:paddingLeft="60dp"
                android:paddingTop="10dp"
                android:paddingRight="60dp"
                android:paddingBottom="10dp"
                fancy:fb_defaultColor="#2672C3"
                fancy:fb_focusColor="#2C67AF"
                fancy:fb_radius="30dp"
                fancy:fb_text="取消设置"
                fancy:fb_textColor="#fff"
                fancy:fb_textSize = "55px"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>