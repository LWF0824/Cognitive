<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        card_view:cardCornerRadius="25dp">
        <ImageView
            android:layout_width="970px"
            android:layout_height="500px"
            android:background="@drawable/weekly_report_card_1"
            />
        <LinearLayout
            android:id="@+id/history_record1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="history1"
                android:textSize="62px"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完成所有每日打卡天数："
                    android:textColor="@color/black"
                    android:textSize="60px"/>
                <TextView
                    android:id="@+id/dailyCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="history1"
                    android:textColor="@color/black"
                    android:textSize="70px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 天"
                    android:textColor="@color/black"
                    android:textSize="70px"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完成运动打卡项数："
                    android:textColor="@color/black"
                    android:textSize="60px"/>

                <TextView
                    android:id="@+id/sportCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="history1"
                    android:textColor="@color/black"
                    android:textSize="70px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 项"
                    android:textColor="@color/black"
                    android:textSize="70px"/>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>